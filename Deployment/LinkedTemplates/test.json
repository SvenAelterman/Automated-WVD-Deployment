{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "az_virtualMachineNames": {
            "type": "array"
        },
        "dj_adminAccount": {
            "type": "string"
        },
        "dj_adminAccountPassword": {
            "type": "securestring"
        }
    },
    "functions": [],
    "variables": {
        "copy": [{
            "name": "Zones",
            "count": "[length(parameters('az_virtualMachineNames'))]",
            "input": "[split(string(add(mod(copyIndex('Zones'),3),1)), ',')]"
        }]
    },
    "resources": [],
    "outputs": {
        "acct": {
            "type": "string",
            "value": "[parameters('dj_adminAccount')]"
        },
        "pwd": {
            "type": "securestring",
            "value": "[parameters('dj_adminAccountPassword')]"
        },
        "Zones": {
            "type": "array",
            "value": "[variables('Zones')]"
        }
    }
}