{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "_artifactsLocation": {
      "type": "string"
    },
    "_artifactsLocationSasToken": {
      "type": "string"
    },
    "automationAccountName": {
      "type": "string"
    },
    "wvd_fsLogixVhdLocation": {
      "type": "string"
    },
    "compileName": {
      "type": "string",
      "defaultValue": "[guid(resourceGroup().id, deployment().name)]"
    }
  },
  "variables": {
    "dscConfigurations": {
      "WvdConfig": {
        "name": "WvdWin10Config",
        "description": "Baseline WVD Configuration for VA",
        // https://raw.githubusercontent.com/department-of-veterans-affairs/windows-virtual-desktop/test/Deployment/DscConfigurations/VA-WVD-Win10-SessionHost-Baseline.ps1?token=AO75HL2V7XRJVOC47OSJKB27FCVZM
        "script": "DscConfigurations/VA_Wvd_Win10_SessionHost_Baseline.ps1"
      }
    },
    "dscResources": {
      "xPSDesiredStateConfiguration": {
        "name": "xPSDesiredStateConfiguration",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/xpsdesiredstateconfiguration.9.1.0.nupkg"
      },
      "CertificateDsc": {
        "name": "CertificateDsc",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/certificatedsc.4.7.0.nupkg"
      },
      "ComputerManagementDsc": {
        "name": "ComputerManagementDsc",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/computermanagementdsc.8.3.0.nupkg"
      }
    }
  },
  "resources": [
    {
      "name": "[parameters('automationAccountName')]",
      "type": "Microsoft.Automation/automationAccounts",
      "apiversion": "2018-01-15",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": {
          "name": "Basic"
        }
      },
      "resources": [
        // Automation Account Module: xPSDesiredStateConfiguration
        {
          "name": "[variables('dscResources').xPSDesiredStateConfiguration.name]",
          "type": "modules",
          "apiVersion": "2018-01-15",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[parameters('AutomationAccountName')]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').xPSDesiredStateConfiguration.url]"
            }
          }
        },
        // Automation Account Module: CertificateDsc
        {
          "name": "[variables('dscResources').CertificateDsc.name]",
          "type": "modules",
          "apiVersion": "2018-01-15",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[parameters('AutomationAccountName')]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').CertificateDsc.url]"
            }
          }
        },
        // Automation Account Module: ComputerManagementDsc
        {
          "name": "[variables('dscResources').ComputerManagementDsc.name]",
          "type": "modules",
          "apiVersion": "2018-01-15",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[parameters('AutomationAccountName')]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').ComputerManagementDsc.url]"
            }
          }
        },
        {
          "name": "[variables('dscConfigurations').WvdConfig.name]",
          "type": "configurations",
          "apiVersion": "2018-01-15",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[parameters('AutomationAccountName')]",
            "[variables('dscResources').xPSDesiredStateConfiguration.name]",
            "[variables('dscResources').CertificateDsc.name]",
            "[variables('dscResources').ComputerManagementDsc.name]"  
          ],
          "properties": {
            "state": "Published",
            "overwrite": "true",
            "source": {
              "type": "uri",
              //"value": "https://raw.githubusercontent.com/department-of-veterans-affairs/windows-virtual-desktop/test/Deployment/DscConfigurations/VA-WVD-Win10-SessionHost-Baseline.ps1?token=AO75HL2V7XRJVOC47OSJKB27FCVZM"
              "value": "[concat(parameters('_artifactsLocation'), variables('dscConfigurations').WvdConfig.script, parameters('_artifactsLocationSasToken'))]"
            }
          }
        },
        {
          "name": "[parameters('compileName')]",
          "type": "compilationjobs",
          "apiVersion": "2018-01-15",
          "dependsOn": [
            "[parameters('AutomationAccountName')]",
            "[variables('dscConfigurations').WvdConfig.name]"
          ],
          "properties": {
            "configuration": {
              "name": "[variables('dscConfigurations').WvdConfig.name]"
            },
            "parameters": {
              "configurationData": "[concat('{\"AllNodes\":{\"nodename\":\"*\",\"FsLogixVhdLocation\":\"', parameters('wvd_fsLogixVhdLocation'), '\"}}')]"
            }
          }
        }
      ]
    }
  ],
  "outputs": {}
}